# Zone Fade Detector - Docker Environment Configuration
# This file contains Docker-specific environment variables
# Copy this to .env and customize for your Docker deployment

# Alpaca API Credentials (REQUIRED)
# Get these from https://app.alpaca.markets/
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets/v2

# Polygon API Credentials (REQUIRED)
# Get these from https://polygon.io/
POLYGON_API_KEY=your_polygon_api_key_here

# System Configuration
LOG_LEVEL=INFO
POLL_INTERVAL=30
ENVIRONMENT=docker

# Database Configuration (if using persistent storage)
DATABASE_URL=sqlite:///data/zone_fade_detector.db

# Alert Configuration
ALERT_EMAIL_SMTP_SERVER=smtp.gmail.com
ALERT_EMAIL_PORT=587
ALERT_EMAIL_USERNAME=your_email@gmail.com
ALERT_EMAIL_PASSWORD=your_app_password
ALERT_EMAIL_FROM=your_email@gmail.com
ALERT_EMAIL_TO=alerts@yourdomain.com

# Webhook Configuration (for external integrations)
WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
WEBHOOK_SECRET=your_webhook_secret

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Performance Configuration
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=10
RETRY_ATTEMPTS=3

# Docker-specific settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
TZ=America/New_York

# Container health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Logging configuration for Docker
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/zone_fade_detector.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Signal output configuration
SIGNALS_DIR=/app/signals
SIGNALS_FILE_PREFIX=zone_fade_signals
SIGNALS_FILE_EXTENSION=jsonl

# Data directory configuration
DATA_DIR=/app/data
CACHE_DIR=/app/data/cache
TEMP_DIR=/tmp/zone_fade_detector

# Security settings
SECRET_KEY=your_secret_key_here_change_this_in_production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Monitoring and metrics (optional)
ENABLE_METRICS=false
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# Development settings (set to false in production)
DEBUG=false
DEVELOPMENT_MODE=false
MOCK_DATA=false